<?xml version = "1.0" encoding = "utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "dominio.MateriaPrima" table = "MATERIAPRIMA">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "idProdutoFinal" column = "IDPRODUTOFINAL" type = "int"/>
        <property name = "idProdutoMP" column = "IDPRODUTOMP" type = "int"/>
        <property name = "quantidadeMateriaPrima" column = "QUANTIDADEMATERIAPRIMA" type = "big_decimal"/>
        <property name = "porcentagemPerda" column = "PORCENTAGEMPERDA" type = "big_decimal"/>

    </class>
</hibernate-mapping>