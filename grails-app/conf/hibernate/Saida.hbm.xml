<?xml version = "1.0" encoding = "utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "dominio.Saida" table = "SAIDA">

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "perda" column = "PERDA" type = "boolean"/>
        <property name = "produto" column = "PRODUTO" type = "int"/>
        <property name = "valor" column = "VALOR" type = "big_decimal"/>
        <property name = "quantidade" column = "QUANTIDADE" type = "big_decimal"/>
        <property name = "data" column = "DATA" type = "date"/>
    </class>
</hibernate-mapping>